# Database Configuration
# PostgreSQL connection string for Prisma
DATABASE_URL="postgresql://username:password@localhost:5432/astral_draft_v4"

# Redis Configuration (Optional - for caching and sessions)
REDIS_URL="redis://localhost:6379"

# NextAuth.js Configuration
# Secret key for JWT signing (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-nextauth-secret-here"
# Base URL of your application
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers (Optional)
# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth  
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Discord OAuth
DISCORD_CLIENT_ID="your-discord-client-id"
DISCORD_CLIENT_SECRET="your-discord-client-secret"

# Sports Data API Configuration
# ESPN API (if using)
ESPN_API_KEY="your-espn-api-key"

# Fantasy Football API (if using)
FANTASY_API_KEY="your-fantasy-api-key"
FANTASY_API_URL="https://api.fantasydata.net"

# NFL Data API (if using)
NFL_API_KEY="your-nfl-api-key"

# Email Service Configuration
# SendGrid
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@astraldraft.com"

# Resend (Alternative email service)
RESEND_API_KEY="your-resend-api-key"

# File Upload Configuration
# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_BUCKET_NAME="astral-draft-uploads"

# Cloudinary (Alternative file upload service)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Analytics Configuration
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Mixpanel
NEXT_PUBLIC_MIXPANEL_TOKEN="your-mixpanel-token"

# Error Monitoring
# Sentry
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-sentry-project"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# Payment Processing
# Stripe
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# Push Notifications
# Web Push (VAPID keys)
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# Feature Flags
# Feature flag service (LaunchDarkly, etc.)
FEATURE_FLAGS_SDK_KEY="your-feature-flags-sdk-key"

# Development Configuration
# Node environment
NODE_ENV="development"

# Enable debug logging
DEBUG="true"

# Enable development features
DEV_MODE="true"

# Disable telemetry
NEXT_TELEMETRY_DISABLED="1"

# WebSocket Configuration
# WebSocket server URL (for real-time features)
NEXT_PUBLIC_WS_URL="ws://localhost:3001"

# Rate Limiting
# Redis-based rate limiting
RATE_LIMIT_REDIS_URL="redis://localhost:6379"

# Search Configuration
# Elasticsearch (if using for search)
ELASTICSEARCH_URL="http://localhost:9200"

# Algolia (Alternative search service)
NEXT_PUBLIC_ALGOLIA_APP_ID="your-algolia-app-id"
NEXT_PUBLIC_ALGOLIA_SEARCH_API_KEY="your-algolia-search-key"
ALGOLIA_ADMIN_API_KEY="your-algolia-admin-key"

# Monitoring and Observability
# New Relic
NEW_RELIC_LICENSE_KEY="your-new-relic-license-key"
NEW_RELIC_APP_NAME="Astral Draft V4"

# DataDog
DD_API_KEY="your-datadog-api-key"

# Security Configuration
# CORS allowed origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,https://astraldraft.com"

# JWT token expiration
JWT_EXPIRES_IN="7d"

# Password encryption rounds
BCRYPT_ROUNDS="12"

# API rate limiting
API_RATE_LIMIT_WINDOW="15m"
API_RATE_LIMIT_MAX="100"

# Webhook Configuration
# Webhook secret for external services
WEBHOOK_SECRET="your-webhook-secret"

# League management webhooks
LEAGUE_WEBHOOK_URL="https://your-webhook-url.com/league"

# Draft webhooks
DRAFT_WEBHOOK_URL="https://your-webhook-url.com/draft"

# CDN Configuration
# CDN URL for static assets
NEXT_PUBLIC_CDN_URL="https://cdn.astraldraft.com"

# Image optimization service
NEXT_PUBLIC_IMAGE_CDN="https://images.astraldraft.com"

# Cache Configuration
# Cache TTL settings
CACHE_TTL_SHORT="300" # 5 minutes
CACHE_TTL_MEDIUM="1800" # 30 minutes  
CACHE_TTL_LONG="3600" # 1 hour

# Social Features
# Social media integration
TWITTER_API_KEY="your-twitter-api-key"
TWITTER_API_SECRET="your-twitter-api-secret"

# Mobile App Configuration
# Push notification service
FCM_SERVER_KEY="your-fcm-server-key"
FCM_SENDER_ID="your-fcm-sender-id"

# Deep linking
NEXT_PUBLIC_APP_SCHEME="astraldraft"

# Compliance and Legal
# Privacy policy URL
NEXT_PUBLIC_PRIVACY_POLICY_URL="https://astraldraft.com/privacy"

# Terms of service URL
NEXT_PUBLIC_TERMS_OF_SERVICE_URL="https://astraldraft.com/terms"

# Age verification
MIN_AGE_REQUIREMENT="18"